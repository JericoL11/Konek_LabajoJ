<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9130">
  
    <RelativeLayout
                 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8DFD4"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:radius="10dp" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/img_logo"
                android:src="@drawable/koneklogo2" />

            <TextView
                android:text="Connect with Friends Everywhere"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_marginTop="160dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:hint="Email"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    
                    android:id="@+id/txt_email" />


            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:src="@drawable/user"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="180dp"
                android:id="@+id/img_user"
                android:layout_marginRight="250.0dp" />

            <ImageView
                android:src="@drawable/key"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginTop="230dp"
                android:id="@+id/img_pass"
                android:layout_marginRight="250.0dp" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="210dp"
                app:passwordToggleEnabled="true" >

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:hint="password"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/txt_password" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:text="Forgot Account?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:linksClickable="true"
                android:paddingTop="10dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:layout_marginTop="260.0dp"
                android:id="@+id/lnk_forgot"/>

            <Button
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/btn_login"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF9130"
                android:textAllCaps="false"
                android:background="#FF9130"
                android:layout_marginTop="310.0dp" />


            <TextView
                android:text="Dont have an Account?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="380.0dp"
                android:id="@+id/lbl_1"/>

            <TextView
                android:text="Sign-Up now!"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="150dp"
                android:linksClickable="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:layout_marginTop="380.0dp"
                android:id="@+id/lnk_signUp"/>
        </RelativeLayout>
    </RelativeLayout>
  </LinearLayout>

